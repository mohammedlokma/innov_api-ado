@model IEnumerable<innov_web.Models.DTO.VerbDto>
<div class="container">
    <a asp-controller="Verb" asp-action="VerbCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New End Point</a>


    <h2>End Points</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Type</td>

                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function Remove(id) {
        $.ajax({
            url: 'https://localhost:7268/api/Departement/DeleteDepartement?id=' + id,
            type: 'DELETE',
            success: function (data) {
                location.reload();
            }
        })
    }
</script>